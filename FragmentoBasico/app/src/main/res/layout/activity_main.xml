<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo Fragmento" />
    <CheckBox
        android:text="Aparece/Desaparece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkFrag"
        android:textStyle="normal|bold"
        android:textSize="18sp"/>

    <fragment
        android:name="com.example.vorper.fragmentobasico.FragmentoEjemplo"
        android:id="@+id/ejemplo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fragmento_ejemplo"/>
</LinearLayout>